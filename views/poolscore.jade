    $("#newGame").click(function(){
        var Score = Parse.Object.extend("Score");
        var score = new Score();

        // save irving row
        score.save({irving: 0});

        // save jonathan row
        score.save({jonathan: 0});
        alert("New Game Create");
        console.log("Created new game");
    });

    $("#irvButton").click(function(){
      var myId = "Q5Rw1MWVAe";
      var query = new Parse.Query("Score");
      query.get(myId, {
        success: function(object) {
          // object is an instance of Parse.Object.
          var playerScore = object.get("irving");
          var playerScore = playerScore + 1;
          $("#irvScore").text(playerScore);

          object.increment("irving", 1);
          object.save();
        },

        error: function(object, error) {
          alert("Error");
        }
      });
    });

    $("#jonButton").click(function(){
      var myId = "Q5Rw1MWVAe";
      var query = new Parse.Query("Score");
      query.get(myId, {
        success: function(object) {
          // object is an instance of Parse.Object.
          var playerScore = object.get("jonathan");
          var playerScore = playerScore + 1;
          $("#jonScore").text(playerScore);

          object.increment("jonathan", 1);
          object.save();
        },

        error: function(object, error) {
          alert("Error");
        }
      });
    });